<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:layout_margin="4dp"
    android:stateListAnimator="@animator/raise_z"
    android:clickable="true"
    android:padding="12dp"
    style="@style/AppTheme.CardView.Card"
    android:theme="@style/AppTheme.CardView.Card"
    android:foreground="?attr/selectableItemBackground"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/come"
                android:text="@string/common_from_prep"
                android:theme="@style/AppTheme.CardView.Title"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/start"
                style="@style/AppTheme.CardView.Title.Station"
                android:theme="@style/AppTheme.CardView.Title.Station"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/go"
                android:text="@string/common_go_prep"
                android:theme="@style/AppTheme.CardView.Title"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/destination"
                style="@style/AppTheme.CardView.Title.Station"
                android:theme="@style/AppTheme.CardView.Title.Station"
                />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/sub_title" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/status"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/date" />

    </LinearLayout>
</android.support.v7.widget.CardView>
