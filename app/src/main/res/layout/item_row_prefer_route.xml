<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?attr/selectableItemBackground"
    android:layout_marginTop="4dp"
    android:layout_marginEnd="4dp"
    android:paddingStart="8dp"
    android:paddingEnd="8dp"
    android:paddingTop="16dp"
    android:paddingBottom="16dp"
    android:clickable="true"
    android:focusable="true"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:src="@drawable/ic_star_black_24dp"
        android:layout_centerVertical="true"
        android:layout_marginEnd="@dimen/activity_horizontal_margin"
        android:tint="@color/orange"/>

    <LinearLayout android:id="@+id/startStation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/header"
        android:layout_centerVertical="true"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txtNameStartLine"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="十号线"
            android:layout_marginEnd="@dimen/activity_horizontal_margin"
            android:textSize="@dimen/small_text_size" />

        <TextView
            android:id="@+id/txtNameStart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"
            android:text="安定门"
            android:layout_marginEnd="@dimen/activity_horizontal_margin"
            android:textSize="@dimen/normal_text_size" />

    </LinearLayout>

    <ImageView
        android:id="@+id/image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/startStation"
        android:layout_centerVertical="true"
        android:layout_marginEnd="@dimen/activity_horizontal_margin"
        android:src="@drawable/ic_arrow_right" />

    <LinearLayout android:id="@+id/endStation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:orientation="vertical"
        android:layout_toEndOf="@+id/image">

        <TextView
            android:id="@+id/txtNameEndLine"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="十号线"
            android:layout_marginEnd="@dimen/activity_horizontal_margin"
            android:textSize="@dimen/small_text_size" />

        <TextView
            android:id="@+id/txtNameEnd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"
            android:text="安定门"
            android:layout_marginEnd="@dimen/activity_horizontal_margin"
            android:textSize="@dimen/normal_text_size" />

    </LinearLayout>

    <ImageButton
        android:id="@+id/btn_remove_prefer_route"
        style="@style/Base.Widget.AppCompat.Button.Borderless"
        android:layout_width="32dp"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_delete_red_24dp"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true"
        android:gravity="center_horizontal|center_vertical" />

</RelativeLayout>