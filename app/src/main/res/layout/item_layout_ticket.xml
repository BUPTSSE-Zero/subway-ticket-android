<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/card_view"
    style="@style/AppTheme.CardView.Card"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:layout_margin="4dp"
    android:clickable="true"
    android:foreground="?attr/selectableItemBackground"
    android:stateListAnimator="@animator/raise_z"
    android:theme="@style/AppTheme.CardView.Card">
    <LinearLayout
        style="@style/AppTheme.CardView.NoPadding"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="12dp"
        android:paddingStart="12dp"
        android:paddingTop="8dp"
        android:theme="@style/AppTheme.CardView.NoPadding">

        <LinearLayout
            style="@style/AppTheme.CardView.NoPadding"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:theme="@style/AppTheme.CardView.NoPadding">

            <LinearLayout
                style="@style/AppTheme.CardView.NoPadding"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:theme="@style/AppTheme.CardView.NoPadding">
                <ImageView
                    android:id="@+id/come"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_fiber_manual_record_black_16dp"
                    android:theme="@style/AppTheme.CardView.Title"
                    />
                <TextView
                    android:id="@+id/start"
                    style="@style/AppTheme.CardView.Title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:theme="@style/AppTheme.CardView.Title"/>
            </LinearLayout>


            <LinearLayout
                style="@style/AppTheme.CardView.NoPadding"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:theme="@style/AppTheme.CardView.NoPadding"
                >
                <ImageView
                    android:id="@+id/go"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_fiber_manual_record_black_16dp"
                    android:theme="@style/AppTheme.CardView.Title"/>
                <TextView
                    android:id="@+id/destination"
                    style="@style/AppTheme.CardView.Title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:theme="@style/AppTheme.CardView.Title"
                    />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            style="@style/AppTheme.CardView.NoPadding"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:theme="@style/AppTheme.CardView.NoPadding">
            <TextView
                android:id="@+id/status"
                style="@style/AppTheme.CardView.Text"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawableStart="@drawable/ic_information_outline"
                android:theme="@style/AppTheme.CardView.Text"/>



            <TextView
                android:id="@+id/date"
                style="@style/AppTheme.CardView.Text"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawableStart="@drawable/ic_time_black_24dp"
                android:theme="@style/AppTheme.CardView.Text" />
        </LinearLayout>
    </LinearLayout>

</android.support.v7.widget.CardView>
