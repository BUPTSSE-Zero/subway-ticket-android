<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_activity"
    style="@style/AppTheme.NoActionBar"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/md_white_1000"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    android:theme="@style/AppTheme.NoActionBar"
    tools:context=".ui.activity.MainActivity">


    <!--<include layout="@layout/toolbar_main"/>-->

    <!-- map -->
    <FrameLayout
        android:id="@+id/content"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <FrameLayout
            android:id="@+id/container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="right|top">

        </FrameLayout>
    </FrameLayout>

    <android.support.v7.widget.CardView
        app:cardCornerRadius="0dp"
        android:id="@+id/nav_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_margin="4dp"
        android:elevation="36dp"
        app:cardUseCompatPadding="true"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:minWidth="180dp"
                android:layout_alignParentStart="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:id="@+id/edittext_drawable_come"
                    android:src="@drawable/ic_hexagon_outline"/>
                <EditText
                    android:drawableEnd="@drawable/ic_format_list_bulleted_24dp"
                    android:id="@+id/edittext_come"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:inputType="textNoSuggestions"
                    android:focusable="false"
                    android:gravity="center_vertical"
                    android:hint="@string/common_go"
                    android:paddingLeft="4dp"
                    android:paddingRight="4dp"
                    android:singleLine="true" />
            </LinearLayout>

            <ImageButton
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_swap_black_24dp"
                android:id="@+id/edittext_btn"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true" />

            <LinearLayout
                android:minWidth="180dp"
                android:layout_alignParentEnd="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
               >

                <ImageView
                    android:id="@+id/edittext_drawable_go"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_hexagon_outline"/>
                <EditText
                    android:drawableEnd="@drawable/ic_format_list_bulleted_24dp"
                    android:id="@+id/edittext_go"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:inputType="textNoSuggestions"
                    android:focusable="false"
                    android:gravity="center_vertical"
                    android:hint="@string/common_go"
                    android:paddingLeft="4dp"
                    android:paddingRight="4dp"
                    android:singleLine="true" />
            </LinearLayout>
        </RelativeLayout>

    </android.support.v7.widget.CardView>

    <com.github.jorgecastilloprz.FABProgressCircle
        android:id="@+id/fab_progress_circle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/nav_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:focusable="false"
        android:focusableInTouchMode="false"
        app:arcColor="@color/md_amber_400"
        app:arcWidth="7dp"
        app:finalIcon="@drawable/ic_ticket_white_24dp">

        <com.getbase.floatingactionbutton.FloatingActionButton
            android:id="@+id/action_unfoucs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:focusable="false"
            android:focusableInTouchMode="false"
            app:arcColor="@color/transparent"
            app:fabSize="normal"
            app:fab_colorNormal="@color/transparent"
            app:fab_colorPressed="@color/transparent"
            app:fab_plusIconColor="@color/transparent"
            app:rippleColor="@color/transparent"

            />
    </com.github.jorgecastilloprz.FABProgressCircle>

    <com.getbase.floatingactionbutton.FloatingActionButton
        android:id="@+id/action_settings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="16dp"
        android:src="@drawable/ic_build_black_24dp"

        app:fab_colorNormal="@color/md_white_1000"
        app:fab_colorPressed="@color/md_amber_400"
        app:fab_title="Action subway" />

    <com.getbase.floatingactionbutton.FloatingActionsMenu
        android:id="@+id/multiple_actions"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/nav_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        app:fab_addButtonColorNormal="@color/md_white_1000"
        app:fab_addButtonColorPressed="@color/md_amber_400"
        app:fab_addButtonPlusIconColor="@color/md_grey_800"
        app:fab_labelStyle="@style/AppTheme">

        <com.getbase.floatingactionbutton.FloatingActionButton
            android:id="@+id/action_subway"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_subway_white_24dp"
            app:fab_colorNormal="@color/md_white_1000"
            app:fab_colorPressed="@color/md_amber_400"
            app:fab_title="Action subway" />

        <com.getbase.floatingactionbutton.FloatingActionButton
            android:id="@+id/action_locate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_place_white_24dp"
            app:fab_colorNormal="@color/md_white_1000"
            app:fab_colorPressed="@color/md_amber_400"
            app:fab_title="Action locate" />

        <com.getbase.floatingactionbutton.FloatingActionButton
            android:id="@+id/action_bills"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_ticket_white_24dp"
            app:fab_colorNormal="@color/md_white_1000"
            app:fab_colorPressed="@color/md_amber_400"
            app:fab_title="Action Bills" />

    </com.getbase.floatingactionbutton.FloatingActionsMenu>


</RelativeLayout>
